{
    "swagger": "2.0",
    "info": {
        "version": "0.1.0",
        "title": "OpenStack Reporting API",
        "description": "A RESTful interface to a collection of reports."
    },
    "host": "130.56.242.65:9494",
    "schemes": [
        "http"
    ],
    "basePath": "/v1",
    "consumes": [
        "application/json",
        "text/xml"
    ],
    "produces": [
        "application/json",
        "text/xml"
    ],
    "definitions": {
        "ReportDetails": {
            "description": "Details of a report",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Unique name of this report",
                    "type": "string"
                },
                "description": {
                    "description": "Description of this report",
                    "type": "string"
                },
                "lastUpdated": {
                    "description": "Time this report's data was last updated",
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "Result": {
            "description": "A result in a report, with properties dependent on the report",
            "type": "object",
            "properties": {}
        },
        "ResultSet": {
            "description": "A set of of results from a report",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Result"
            }
        }
    },
    "paths": {
        "/reports": {
            "x-handler": "ReportsList",
            "get": {
                "summary": "Lists reports",
                "description": "Returns a collection of available reports",
                "responses": {
                    "200": {
                        "description": "A collection of available reports",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/ReportDetails"
                            }
                        }
                    }
                }
            }
        },
        "/reports/{report}": {
            "x-handler": "ReportDetail",
            "parameters": [
                {
                    "description": "Name of report",
                    "name": "report",
                    "in": "path",
                    "required": true,
                    "type": "string"
                }
            ],
            "get": {
                "summary": "Get report detail",
                "description": "Detailed information about a report",
                "responses": {
                    "200": {
                        "description": "Detailed information about the requested report",
                        "schema": {
                            "$ref": "#/definitions/ReportDetails"
                        }
                    }
                }
            }
        },
        "/reports/{report}/resultset": {
            "x-handler": "ReportResultSet",
            "get": {
                "summary": "Get report result set",
                "description": "Retrieve a result set from the given report",
                "parameters": [
                    {
                        "name": "report",
                        "in": "path",
                        "description": "Name of report",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Report result set",
                        "schema": {
                            "$ref": "#/definitions/ResultSet"
                        }
                    }
                }
            }
        }
    }
}
